{
    // NOTE: make the keys totally flat (instead of nested objects)
    "coc.preferences.extensionUpdateCheck": "never", // :CocUpdate
    "coc.preferences.hoverTarget": "preview",
    "coc.preferences.previewAutoClose": false,
    "coc.preferences.previewMaxHeight": 20,
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "list.insertMappings": {
        "<C-q>": "feedkeys:\\<ESC>"
    },
    "list.normalMappings": {
        "<C-q>": "feedkeys:\\<ESC>"
    },
    "list.maxPreviewHeight": 20,
    "diagnostic.displayByAle": false, // setting this true makes signs keep appear/disappearing
    "diagnostic.enableHighlightLineNumber": false,
    "diagnostic.enableMessage": "jump", // manually by CocAction('diagnosticInfo')
    "diagnostic.warningSign": "--",
    "diagnostic.infoSign": "--",
    "diagnostic.hintSign": "--",
    "codeLens.enable": true,
    "codeLens.subseparator": " | ",
    "suggest.maxPreviewWidth": 100,
    "diagnostic.maxWindowWidth": 100,
    "languageserver": {
        "ocaml-lsp": {
            "command": "opam",
            "args": ["config", "exec", "--", "ocamllsp"],
            "filetypes": ["ocaml"]
        },
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".git/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    },
    "rust-analyzer.server.path": "~/.cargo/bin/rust-analyzer",
    "rust-analyzer.diagnostics.enable": true,
    "rust-analyzer.checkOnSave.enable": true,
    "rust-analyzer.inlayHints.typeHintsSeparator": "‣ ",
    "rust-analyzer.inlayHints.chainingHintsSeparator": "‣ ",
    "rust.racer_completion": false,
    "python.linting.pylintArgs": ["-dR", "-dC", "-dW0511", "-dW0614", "-dW0621"],
    "python.linting.mypyEnabled": false,
    "python.linting.mypyArgs": ["--no-warn-unused-ignores"],
    "coc.source.ultisnips.priority": 80,
    "coc.source.word.shortcut": "W",
}
