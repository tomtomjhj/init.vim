{
    // NOTE
    // - make the keys totally flat (instead of nested objects)
    // - no trailing comma allowed
    "coc.preferences.extensionUpdateCheck": "never", // :CocUpdate
    "hover.target": "float",
    "hover.previewMaxHeight": 20,
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "list.insertMappings": {
        "<C-q>": "feedkeys:\\<ESC>"
    },
    "list.normalMappings": {
        "<C-q>": "feedkeys:\\<ESC>"
    },
    "list.maxPreviewHeight": 20,
    "diagnostic.displayByAle": false, // setting this true makes signs keep appear/disappearing
    "diagnostic.enableHighlightLineNumber": false,
    "diagnostic.enableMessage": "jump", // manually by CocAction('diagnosticInfo')
    "diagnostic.errorSign": "E",
    "diagnostic.warningSign": "W",
    "diagnostic.infoSign": "I",
    "diagnostic.hintSign": "H",
    "codeLens.enable": true,
    "codeLens.subseparator": " | ",
    "suggest.noselect": true,
    "languageserver": {
        "ocaml-lsp": {
            "command": "opam",
            "args": ["config", "exec", "--", "ocamllsp"],
            "filetypes": ["ocaml"]
        }
    },
    "rust-analyzer.diagnostics.enable": true,
    "rust-analyzer.checkOnSave.enable": true,
    "coc.source.ultisnips.priority": 80
}
